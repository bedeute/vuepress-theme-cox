@require './font.styl'
@require './buttons.styl'
@require './config.styl'
@require './pagination.styl'
@require './code.styl'
@require './custom-blocks.styl'
@require './arrow.styl'
@require './wrapper.styl'
@require './toc.styl'
@require './sw-popup.styl'

@import url('https://fonts.googleapis.com/css?family=IBM+Plex+Serif:400,400i,600,600i&display=swap')
@import url('https://fonts.googleapis.com/css?family=Fira+Sans:400,400i,500,500i,600,600i,700,700i&display=swap')
@import url('https://fonts.googleapis.com/css?family=Asap:400,400i,600,600i&display=swap')
@import url('https://fonts.googleapis.com/css?family=Expletus+Sans&display=swap')
@import url('https://fonts.googleapis.com/css?family=Literata:400,400i,500,500i,600,600i,700,700i&display=swap')
@import url('https://fonts.googleapis.com/css?family=Gelasio:400,400i,500,500i,600,600i,700,700i&display=swap')
@import url('https://fonts.googleapis.com/css?family=Offside&display=swap')
@import url('https://fonts.googleapis.com/css?family=Arima+Madurai&display=swap')

html
  font-size 62.5%

html, body
  padding 0
  margin 0
  background-color #fff

body
  font-family $fontSansSerif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 1.8rem
  line-height 2
  color $textColor
  background-color #FFF

.page
  padding-left $sidebarWidth

.navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $navbarHeight
  background-color #fff
  box-sizing border-box
  border-bottom 1px solid $borderColor

.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none

.sidebar
  background-color #fff
  width $sidebarWidth
  position fixed
  z-index 10
  margin 0
  top $navbarHeight
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto

{$contentClass}:not(.custom)
  > *:first-child
    margin-top $navbarHeight

  a:hover
    // text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%
    margin .8rem auto

    + em
      color $grey30
      line-height 1.6
      margin -1rem 1rem 0
      display inline-block

{$contentClass}.custom
  padding 0
  margin 0

  img
    max-width 100%

a
  color $grey60
  text-decoration underline
  text-decoration-color $accentColor
  transition all 0.22s
  background-image linear-gradient( $grey70 55%, darken($accentColor, 16) 45%)
  background-image -webkit-linear-gradient( $grey70 55%, darken($accentColor, 16) 45%)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
  background-position-y 0%
  background-size 2px
  background-size auto 175%

  &:hover
    background-position-y 100%
    transition all 0.22s
    text-decoration-color $grey
    color $grey70

p a code
  font-weight 400
  color $accentColor

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size 2rem
  font-family "IBM Plex Serif", $fontSerif
  color desaturate(shade($accentColor, 24%), 36%)
  border-left 3px solid $accentColor
  border-top-left-radius 4px
  border-bottom-left-radius 4px
  margin 2.8rem 2rem
  padding 1rem 1.8rem 1rem 1.8rem

  & > p
    margin 0
    line-height 1.6

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25
  font-family $fontSerif
  transition margin-left .12s ease-in-out

  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    // margin-bottom 0
    // padding-top 5rem
    margin-bottom 0

    &:first-child
      margin-top (0.5rem - $navbarHeight)
      padding-top ($navbarHeight + 1rem)
      // padding-top 1rem
      // margin-top -1rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 2rem

    &:hover
      // transform translateX(.87rem)
      margin-left 2rem
      .header-anchor
        opacity: 1

h1
  font-size 3.8rem

h2
  font-size 3rem
  // padding-bottom .3rem

h3
  font-size 2.2rem

h4
  font-size 1.9rem

a.header-anchor
  font-size 0.85em
  display inline-block
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  text-decoration none
  color $grey20
  opacity 0

  &:hover
    color $accentColor

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p, ul, ol
  line-height 1.8

hr
  border 0
  background-color $grey10
  height 3px
  width 140px
  border-radius 6px
  margin-top 3rem
  margin-bottom 2rem

table
  border-collapse collapse
  margin 1rem 0
  display: block
  overflow-x: auto

tr
  border-top 1px solid #dfe2e5

  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block

  &.no-navbar
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6
      margin-top 1.5rem
      padding-top 0

    .sidebar
      top 0


@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .sidebar
      display none

    .page
      padding-left 0

@require 'mobile.styl'
