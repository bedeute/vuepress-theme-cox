@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.82

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size 15px
    width $mobileSidebarWidth
  .page
    padding-left $mobileSidebarWidth

// wide mobile
@media (max-width: $MQMobile)
  h1
  font-size 'calc(%s + 75%)' % $baseFontSize
  line-height 1.3

  h2
    font-size 'calc(%s + 45%)' % $baseFontSize

  h3
    font-size 'calc(%s + 25%)' % $baseFontSize

  h4
    font-size 'calc(%s + 15%)' % $baseFontSize

  h5
    font-size 'calc(%s + 5%)' % $baseFontSize

  .sidebar
    top 0
    padding-top $navbarHeight
    transform translateX(-100%)
    transition transform .2s ease
  .page
    padding-left 0
  .theme-container
    &.sidebar-open
      .sidebar
        transform translateX(0)
    &.no-navbar
      .sidebar
        padding-top: 0
  {$contentClass}:not(.custom) > h1:first-child
    // padding-top 2rem

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 2.6rem
  {$contentClass}
    div[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
