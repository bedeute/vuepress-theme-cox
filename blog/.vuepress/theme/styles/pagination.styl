ul.pagination
  
  > li

    > a,
    > span
      margin 0 1px
      border-radius .4rem
      background-color white
      color $grey40
      border 2px solid transparent
      font-size 1.6rem
      position relative
      
      &:before
        position absolute
        background-color $accentColorHover
        content ''
        height 0%
        width 100%

      &:hover,
      &:focus
        // background-color $grey10
        border-color $grey20
        color $grey


    
    &.active

      > a,
      > span
        background-color $grey20
        border-color $grey20
        color $grey

        &:hover,
        &:focus
          background-color lighten($grey20, 2)
          color $grey60
          border-color $grey20
          // background-color white
          // color $grey40

    &.disabled

      > a,
      > span,
      > a:hover,
      > span:hover,
      > a:focus,
      > span:focus
        border-color transparent
        color: $grey20