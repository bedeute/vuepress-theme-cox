@import '~@app/style/config'


#desktop-header, #mobile-header
  z-index 12
  position fixed
  top 0
  left 0
  right 0
  max-width 100vw
  box-sizing border-box
  // background lighten(#3eaf7c, 90%)
  background-color #FFF
  padding 0 32px
  margin auto
  box-shadow:
    0 2.3px 5.3px -17px rgba(0, 0, 0, 0.024),
    0 16px 12px -17px rgba(0, 0, 0, 0.13)

  transition: all .6s cubic-bezier(.25, .8, .25, 1)
  // transition: all 1s ease-in-out

  ol, ul
    list-style none

.header-wrapper
  display flex
  height $navbarHeight
  align-items center

  .title
    font-size 2.2rem
    margin 0
    display block
    flex none

    a
      font-family $fontSerif
      text-decoration none

      &:after
        content none

  .header-right-wrap
    flex 1 1 auto
    display flex
    justify-content flex-end
    align-items center

    > .main-nav
      flex 1 1 auto
      display flex
      justify-content flex-end
      margin-right .8rem

      ul
        display inline-flex
        margin 0

        .nav-item
          margin-left 20px

          .nav-link
            position relative
            font-size 1.6rem
            // color lighten(#3eaf7c, 30%)
            text-decoration none
            transition color .3s
            padding 1.4rem 0

            &:after
              content ''
              background-color transparent
              position absolute
              width 75%
              height 3px
              bottom 0
              margin auto
              left 0
              right 0
              border-top-left-radius 3px
              border-top-right-radius 3px
              transition background-color, bottom .12s ease-in-out

            &:hover

              &:after
                background-color $grey10


            &.router-link-active
              color $grey60

              &:after
                background-color $accentColor

    >>> .search-box
      flex none
      margin-left 1rem
      margin-right .8rem

      input
        background-position-y .6rem
        background-position-x .8rem
        background-size 1.4rem
        border-radius 2rem
        height 2.6rem
        font-size 1.4rem
        transition all .5s
        border 2px solid $grey20
        padding 0 1.2rem 0 2.6rem
        color $grey40

        &:hover
          border-color $grey30
          background-color lighten($grey, 72)

        // &:focused,
        &.focused
          background-color lighten($grey, 70)
          width 12rem
          border-color $grey30

        @media (max-width: $MQNarrow)
          padding-right .1rem
          background-position-x .7rem
          border-color transparent

          &:hover
            border-color $grey20
            box-shadow none
          
          &.focused
            border-color $grey20


      .suggestions
        border 1px solid $grey20
        top 40px
        right 0

        a
          color $grey
          text-decoration none

          &.focused
            color $accentColor


// mobile menu style

#mobile-header

  .mobile-header-title
    display flex
    align-items center
    justify-content space-between
    padding 0.7rem 0

    .feather-menu
      color $grey

    .feather-x
      color #da597d

    .mobile-home-link
      text-decoration none
      font-family $fontSerif
      border none

      &:after
        content none

.mobile-nav

  > ul
    margin 0 0 .4rem
    padding 1rem .4rem


.mobile-nav-item
  list-style none

  .nav-link
    text-decoration none
    display block
    padding .4rem 0

.menu-divider
  margin 0
  border-color $grey10

.mobile-menu-wrapper
  border-top solid 1px lighten($grey20, 14)
  max-height 0
  overflow hidden
  transition 0.3s ease
  background-color #fff

.mobile-menu-wrapper.open
  max-height 450px
  transition 0.3s ease


@media (max-width: $MQMobile)

  #desktop-header
    display none

  .header-wrapper
    flex-direction column

    .header-right-wrap
      display none

@media (min-width: $MQMobile)
  #mobile-header
    display none